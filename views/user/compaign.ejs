<%- include('../dashboard/sidemenu.ejs') %>


    <section class="home-section">
        <div class="home-content">
            <i class='bx bx-menu'></i>
            <span class="text">Campaign</span>
        </div>
        <div class="listing">
            <div class="row">
                <div class="form-group create-btn-div col-xs-12 col-md-12 col-sm-12">
                    <button type="button" class="btn btn-info view-form">Create Compaign</button>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Sr No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Compaign 1</td>
                        <td>101</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Compaign 2</td>
                        <td>102</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Compaign 3</td>
                        <td>103</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="create-form hide">
            <h4>Create Campaign</h4>
            <br>
            <form>
                <div class="row">
                    <div class="form-group col-xs-12 col-md-12 col-sm-12">
                        <label for="networkName">Campaign Name</label>
                        <input type="text" class="form-control" id="networkName">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="stateSelect">State</label>
                        <select class="form-control" id="stateSelect">
                            <option>Maharashtra</option>
                            <option>Karnataka</option>
                            <option>Telangana</option>
                        </select>
                    </div>

                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="citySelect">City</label>
                        <select class="form-control" id="citySelect">
                            <option>Mumbai</option>
                            <option>Pune</option>
                            <option>Nashik</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="networkSelect">Network</label>
                        <select class="form-control" id="networkSelect">
                            <option>Network 1</option>
                            <option>Network 2</option>
                            <option>Network 3</option>
                        </select>
                    </div>
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="channelSelect">Channel (Will Be Populated as per Network Selection)</label>
                        <select multiple class="form-control" id="channelSelect">
                            <option>Channel 1</option>
                            <option>Channel 2</option>
                            <option>Channel 3</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="product">Product</label>
                        <input type="text" class="form-control" id="product">
                    </div>
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="brand">Brand</label>
                        <input type="text" class="form-control" id="brand">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="startDate">Start Date</label>
                        <input type="date" class="form-control" id="startDate">
                    </div>
                    <div class="form-group col col-12 col-sm-6 col-md-6">
                        <label for="endDate">End Date</label>
                        <input type="date" class="form-control" id="endDate">
                    </div>
                </div>

                <fieldset class="form-group">
                    <div class="row">
                        <div class="form-group col col-12 col-sm-6 col-md-6">
                            <label for="slotType">Slot Type</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="slotType" id="staticSlot"
                                        value="static" checked>
                                    <label class="form-check-label" for="staticSlot">
                                        Static
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="slotType" id="dynamicSlot"
                                        value="dynamic">
                                    <label class="form-check-label" for="dynamicSlot">
                                        Dynamic
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>


                <br>
                <button type="button" class="btn btn-danger view-listing">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>


    <script>
        $('.view-form').click(function () {
            $('.listing').addClass('hide');
            $('.create-form').removeClass('hide')
        });
        $('.view-listing').click(function () {
            $('.listing').removeClass('hide');
            $('.create-form').addClass('hide')
        })
    </script>

    <%- include('../dashboard/toggle.ejs') %>